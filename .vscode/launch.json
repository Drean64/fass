{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug File",
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"stopOnEntry": false,
			"watchMode": false
		},
		{
			"name": "Run File",
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"noDebug": true,
			"watchMode": false
		},
		{
			"name": "Attach Bun",
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "attach",
			"url": "ws://localhost:6499/",
			"stopOnEntry": false
		}
	]
}
